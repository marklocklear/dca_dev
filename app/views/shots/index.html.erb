<h1>Listing shots</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Comedian</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shots.each do |shot| %>
  <tr>
    <td><%= shot.name %></td>
    <td><%= shot.comedian.name %></td>
		<td><%= image_tag shot.avatar.url(:thumb) %></td>
    <td><%= link_to 'Show', shot %></td>
    <td><%= link_to 'Edit', edit_shot_path(shot) %></td>
    <td><%= link_to 'Destroy', shot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

